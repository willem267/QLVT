@model QLVT.Models.TaiKhoan

@{
    ViewData["Title"] = "Thêm tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/VatTu.css" rel="stylesheet" />
}

<div class="form-container">
    <div class="form-title">Thêm Tài Khoản</div>
    <form asp-action="ThemTk" asp-controller="TaiKhoan" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group">
            <label asp-for="MaTk"></label>
            <input asp-for="MaTk" class="form-control" placeholder="Nhập mã tài khoản" />
            <span asp-validation-for="MaTk" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TenDn"></label>
            <input asp-for="TenDn" class="form-control" placeholder="Nhập tên đăng nhập" />
            <span asp-validation-for="TenDn" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Mk"></label>
            <input asp-for="Mk" class="form-control" placeholder="Nhập mật khẩu" />
            <span asp-validation-for="Mk" class="text-danger"></span>
        </div>

       

        <div class="form-group">
            <label >Quyền</label>
            <select asp-for="MaQ" class="form-control" asp-items="ViewBag.QuyenList">
                <option value="">-- Chọn Quyền --</option>
            </select>
            <span asp-validation-for="MaQ" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label >Nhân viên sử dụng</label>
            <select asp-for="MaNv" class="form-control" asp-items="ViewBag.NhanVienList">
                <option value="">-- Chọn Người sử dụng --</option>
            </select>
            <span asp-validation-for="MaNv" class="text-danger"></span>
        </div>

      

        <br />
        <div class="button-group">
            <input type="submit" value="Thêm" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Trở về danh sách</a>
        </div>
    </form>
</div>