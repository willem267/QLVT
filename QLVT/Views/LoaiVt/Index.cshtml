@model IEnumerable<QLVT.Models.LoaiVt>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.1); /* Đổ bóng cho bảng */
        background-color: #fff; /* Màu nền trắng */
        border-radius: 12px; /* Bo góc cho bảng */
        overflow: hidden; /* Ẩn viền bị tràn */
    }

    th, td {
        border: 1px solid #ddd; /* Viền nhẹ */
        text-align: left; /* Căn chữ nằm bên trái */
        padding: 12px; /* Khoảng cách bên trong ô */
        font-size: 14px;
    }

    th {
        background-color: #343a40; /* Màu nền header */
        color: white; /* Màu chữ header */
        text-transform: uppercase;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9; /* Màu nền xen kẽ */
    }

    .btn {
        border-radius: 8px; /* Bo góc cho nút */
        padding: 6px 12px;
        font-size: 14px;
        margin: 4px; /* Khoảng cách giữa các nút */
    }

    .btn-danger {
        background-color: #dc3545; /* Nút Xóa màu đỏ */
        color: white;
    }

    .btn-warning {
        background-color: #ffc107; /* Nút Sửa màu vàng */
        color: black;
    }

    .btn:hover {
        opacity: 0.85; /* Hiệu ứng hover */
    }
</style>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Quản lý loại vật tư</h1>
        <a asp-action="formThemLoaiVT" class="btn btn-success">Thêm Loại Vật Tư</a>
    </div>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

<table>
    <thead>
        <tr>
            <th>Mã loại</th>
            <th>Tên loại</th>
            <th>Mô tả</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.MaLoai)</td>
                <td>@Html.DisplayFor(modelItem => item.TenLoai)</td>
                <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                <td>
                    <div style="display: flex; justify-content: center; gap: 10px;">
                        <a asp-action="XoaLoaiVT" asp-route-id="@item.MaLoai" class="btn btn-danger">Xóa</a>
                        <a asp-action="SuaLoaiVT" asp-route-id="@item.MaLoai" class="btn btn-warning">Sửa</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>