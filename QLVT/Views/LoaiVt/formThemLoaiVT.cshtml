@model QLVT.Models.LoaiVt

@{
    ViewData["Title"] = "formThemLoaiVT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Thêm loại vật tư</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Them">
            <!-- Hiển thị thông báo lỗi nếu có -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MaLoai" class="control-label">Mã loại</label>
                <input asp-for="MaLoai" class="form-control" />
                <span asp-validation-for="MaLoai" class="text-danger"></span> <!-- Thông báo lỗi Mã loại -->
            </div>

            <div class="form-group">
                <label asp-for="TenLoai" class="control-label">Tên loại</label>
                <input asp-for="TenLoai" class="form-control" />
                <span asp-validation-for="TenLoai" class="text-danger"></span> <!-- Thông báo lỗi Tên loại -->
            </div>

            <div class="form-group">
                <label asp-for="MoTa" class="control-label">Mô tả</label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span> <!-- Thông báo lỗi Mô tả -->
            </div>

            <br />
            <div class="form-group" style="display: flex; gap: 200px;">
                <input type="submit" value="Thêm" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Trở về danh sách</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
