@model QLVT.Models.LoaiVt

@{
    ViewData["Title"] = "Thêm Loại Vật Tư";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/LoaiVT.css" rel="stylesheet" />
}

<div class="form-container">
    <div class="form-title">Thêm Loại Vật Tư</div>
    <form asp-action="Them">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group">
            <label asp-for="MaLoai" class="control-label"></label>
            <input asp-for="MaLoai" class="form-control" placeholder="Nhập mã loại" />
            <span asp-validation-for="MaLoai" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TenLoai" class="control-label"></label>
            <input asp-for="TenLoai" class="form-control" placeholder="Nhập tên loại" />
            <span asp-validation-for="TenLoai" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MoTa" class="control-label"></label>
            <textarea asp-for="MoTa" class="form-control" placeholder="Nhập mô tả" rows="3"></textarea>
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>

        <br />
        <div class="button-group">
            <input type="submit" value="Thêm" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Trở về danh sách</a>
        </div>
    </form>
</div>


