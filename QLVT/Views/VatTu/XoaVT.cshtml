@model QLVT.Models.VatTu

@{
    ViewData["Title"] = "Xóa Vật Tư";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .delete-container {
        max-width: 600px;
        margin: 50px auto;
        background: #fff5f5;
        padding: 30px;
        border: 1px solid #f8d7da;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .delete-title {
        font-size: 24px;
        font-weight: bold;
        color: #721c24;
        margin-bottom: 20px;
    }

    .delete-warning {
        font-size: 16px;
        color: #721c24;
        margin-bottom: 20px;
        background-color: #f8d7da;
        padding: 10px;
        border-radius: 5px;
    }

    .delete-details dl {
        text-align: left;
        margin-bottom: 20px;
    }

    .delete-details dt {
        font-weight: bold;
        color: #495057;
    }

    .delete-details dd {
        margin-left: 0;
        color: #343a40;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .btn-danger {
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 16px;
        background-color: #dc3545;
        color: white;
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-danger:hover {
            background-color: #c82333;
            transform: scale(1.05);
        }

    .btn-primary {
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 16px;
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }
</style>

<div class="delete-container">
    <div class="delete-title">Xóa Vật Tư</div>

    <div class="delete-warning">
        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
        Bạn có chắc chắn muốn xóa vật tư này? Hành động này không thể hoàn tác!
    </div>

    <div class="delete-details">
        <dl class="row">
            <dt class="col-sm-4">Mã Vật Tư:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MaVt)</dd>

            <dt class="col-sm-4">Tên Vật Tư:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TenVt)</dd>

            <dt class="col-sm-4">Đơn Vị Tính:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DonViTinh)</dd>

            <dt class="col-sm-4">Số Lượng Tồn:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.SoLuongTon)</dd>

            <dt class="col-sm-4">Mô Tả:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MoTa)</dd>

            <dt class="col-sm-4">Đơn Giá:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DonGia)</dd>
        </dl>
    </div>

    <form asp-action="XoaVT" method="post">
        <div class="button-group">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-primary">Trở về danh sách</a>
        </div>
    </form>
</div>
