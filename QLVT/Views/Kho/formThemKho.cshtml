@model QLVT.Models.Kho

@{
    ViewData["Title"] = "Thêm Kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/Kho.css" rel="stylesheet" />
}

<div class="form-container">
    <div class="form-title">Thêm Kho</div>
    <form asp-action="Them">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group">
            <label asp-for="MaKho" class="control-label"></label>
            <input asp-for="MaKho" class="form-control" placeholder="Nhập mã kho" />
            <span asp-validation-for="MaKho" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TenKho" class="control-label"></label>
            <input asp-for="TenKho" class="form-control" placeholder="Nhập tên kho" />
            <span asp-validation-for="TenKho" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DiaChi" class="control-label"></label>
            <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ kho" />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>

        <br />
        <div class="button-group">
            <input type="submit" value="Thêm Kho" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Trở về danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
